@model IEnumerable<Musicdb.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>Artists</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    @foreach (var item in Model)

    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div id="artistrec" class="caption">
                    <p>@Html.DisplayFor(modelItem => item.ArtistName)</p>
                    <p><img id="artistimage" src="@Html.DisplayFor(modelItem => item.ArtistPhoto)" /></p>

                </div>
                @Html.ActionLink("Edit", "Edit", new { id = item.ArtistID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ArtistID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ArtistID })

            </div>
        </div>
    }
    </div>



